{
  "manifest_version": 3,
  "name": "Collabstr Profile Scraper",
  "version": "1.0.0",
  "description": "Scrape influencer profile IDs from Collabstr.com and store them in SQLite",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://collabstr.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://collabstr.com/influencers*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
